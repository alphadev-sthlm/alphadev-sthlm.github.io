.main-header {
  z-index: 666;
  display: flex;
  flex-wrap: wrap;
  position: fixed;
  width: 100%;
  text-align: center;
  font-family: 'Montserrat', sans-serif;
  line-height: 80px;
  height: 100px;
  background: #000;
  color: #fff;
  transition: all 0.4s ease;
  top: 0;

  &__wrapper {
    margin-left: auto;
    margin-right: auto;
  }

  &__logo {
    height: 30px;
  }

  &__list {
    margin: 0 auto;
    text-align: center;
    font-size: 12px;
    color: white;
  }

  &__item {
    float: right;
    justify-content: space-between;
  }

  &__link {
    color: #FFFFFF;
    text-decoration: none;
    padding-left: 22px;
    padding-right: 22px;
    float: left
    font-size: 24px;
  }
}

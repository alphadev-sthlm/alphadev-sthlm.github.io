.news-part {
  position: relative;
  display: block;
  width: 100%;
  color: $secondary-color;
  background-position: 70% 45%;
  background-size: cover;
  padding: 40px 0;
  background-color: #333;

  small {
    color: $main-color;
  }

  &__headline {
    max-width: $desktop-width;
    margin-bottom: 0;
    padding: 0;
    color: $secondary-color;
  }

  &__headline--highlighted {
    color: $main-color;
  }

  &:before {
    top: 0;
    left: 0;
    position: absolute;
    width: 100%;
    height: 100%;
    content: '';
    z-index: 1;
  }

  &__content {
    text-align: center;
    position: relative;
    z-index: 2;
    margin: 0 auto;
    padding: 20px 15px;
    display: flex;
    max-width: $desktop-width;
    flex-direction: column;
    justify-content: space-between;

    &--headline {
      justify-content: left;
    }

    @media (min-width $tablet-width) {
      flex-direction: row;
    }
  }
  &__column {
    padding: 10px;
    border-radius: 10px;
    margin-bottom: 10px;
    background: #fff;
    width: 100%;

    @media (min-width $tablet-width) {
      margin: 0 5px;
      padding: 0 20px;
      width: 25%;
    }

    @media (min-width $desktop-width) {
      margin: 0 10px;
      padding: 0;
    }
  }
}

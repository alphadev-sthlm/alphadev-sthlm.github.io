.news-part {
  margin: 0 auto 0;
  text-align: center;
  position: relative;
  display: block;
  background-color: $main-color;
  text-decoration: none;
  width: 100%;
  color: white;
  background-position 70% 45%;
  background-size: cover;
  padding: 40px 0;
  justify-content: space-between;

  h1 {
    color: $dark;
    z-index: 3;
  }

  &:before {
    top: 0;
    left: 0;
    position: absolute;
    width: 100%;
    height: 100%;
    content: '';
    background-color: rgba(0,0,0,0.2);
    z-index: 1;
  }

  .news-item {
    margin: 0 auto 0;
    max-width: 900px;
    display: flex;
    flex-direction: row;
    &__title {
      left: 0;
      overflow-x: inherit;
      margin-bottom: 10px;
      color: $white;
    }
    &__image{
      float: left;
      width:100px;
      height:100px;
    }
    &__text {
      float: left;
      line-height: 22px;
      font-size: 16px;
      color: white;
      position: relative;
      z-index: 2;
      margin: 0 auto;
      padding: 20px 15px;
      display: flex;
      max-width: $desktop-width;
    }
    
    @media (min-width $tablet-width) {
      padding: 0 20px;
      width: 100%;

      &:first-child {
        margin-bottom: 0;
      }
    }

    @media (min-width $desktop-width) {
      padding: 0;
    }
  }
}

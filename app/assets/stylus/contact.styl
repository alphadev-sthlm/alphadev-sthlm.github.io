.contact-part {
  display: block;
  width: 100%;
  color: white;
  background-color: black;
  padding: 40px 0;
  justify-content: space-between;

  &__content {
    margin: 0 auto;
    padding: 20px 10px;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    text-align: center;
    max-width: $content-width;
  }
  &__column {
    padding: 10px;
    width: 50%;
    text-align: center;

    //Tablet
    @media (min-width $tablet-width) {
      width: 33%;
    } //Desktop
    @media (min-width $desktop-width) {
      width: 25%;
    }
  }
}

.consultants-part {
  padding: 20px 10px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  max-width: $desktop-width;
  margin: 0 auto;
  text-align: center;

  &__name {
    margin-bottom: 10px;
  }
  &__image-wrapper {
    width: 80%;
    margin-left: auto;
    margin-right: auto;
    border-radius: 50%;
    overflow: hidden;
    margin-bottom: 10px;
  }

  &__consultant {
    padding: 10px;
    width: 33%;

    //Desktop
    @media (min-width $desktop-width) {
      width: 25%;
    }
  }
  &__consultant-wrapper {
    box-shadow: 0 0 10px #aaa;
    background-color: #fff;
    padding: 15px;
  }
}

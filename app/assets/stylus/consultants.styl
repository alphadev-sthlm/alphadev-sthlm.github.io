.consultants-part {
  margin: 0 auto 40px;
  max-width: $desktop-width;
  text-align: center;

  &__headline {
    font-weight: bold;
    font-size: 30px;
    padding: 0 0 15px 0;
    text-transform: uppercase;
  }
  &__consultants {
    padding: 20px 10px;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    text-align: center;
  }

  &__name {
    margin-bottom: 10px;
  }
  &__title {
    margin-bottom: 10px;
  }
  &__image-wrapper {
    width: 80%;
    margin-left: auto;
    margin-right: auto;
    border-radius: 50%;
    overflow: hidden;
    margin-bottom: 10px;
  }

  &__consultant {
    padding: 10px;
    width: 50%;

    //Tablet
    @media (min-width $tablet-width) {
      width: 33%;
    } //Desktop
    @media (min-width $desktop-width) {
      width: 25%;
    }
  }
  &__toggle-button {
    display: block;
    width: 100%;
  }
  &__consultant-wrapper {
    box-shadow: 0 0 10px #aaa;
    background-color: #fff;
    padding: 15px;
  }
}

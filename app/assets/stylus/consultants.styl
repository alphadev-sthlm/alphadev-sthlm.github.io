.consultants-part {
  margin: 0 auto 50px;
  max-width: $desktop-width;
  text-align: center;

  &__info {
    font-size: 1.8em;
    i.fa {
      color: #9d9e9e;
      &:hover {
        color: #0077b5;
      }
    }
  }
  &__headline {
    color: #747473;
    padding: 0 0 15px 0;
  }
  &__consultants {
    padding: 20px 10px;
    display: flex-flow;
    flex-wrap: wrap;
    justify-content: space-between;
    text-align: center;
  }

  &__name {
    margin-bottom: 10px;
    font-size: 18px;
  }
  &__title {
    margin-bottom: 10px;
  }
  &__image-container {
    width: 80%;
    margin: 0 auto 10px;
  }
  &__image-wrapper {
    padding-bottom: 100%;
    height: 0;
    border-radius: 50%;
    overflow: hidden;
  }

  &__consultant {
    display: inline-flex;
    padding: 10px;
    width: 50%;

  //Tablet
    @media (min-width $tablet-width) {
      width: 33%;
    } //Desktop
    @media (min-width $desktop-width) {
      width: 25%;
    }
  }
  &__toggle-button {
    display: block;
    width: 100%;
  }
  &__consultant-wrapper {
    box-shadow: 0 0 6px #ccc;
    background-color: $white;
    padding: 15px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 100%;
  }

  .fa {
    color: black;
  }
}

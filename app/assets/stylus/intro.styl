.intro-part {
  background: url('../img/bg/intro-small.png') center bottom;
  margin: 0 auto;
  width: 100%;
  height: auto;
  line-height: 30px;
  position: relative;
  padding-top: 150px;
  padding-bottom: 100px;
  background-size: cover;
  -moz-background-size: cover;
  -webkit-background-size: cover;
  -o-background-size: cover;
  z-index: 1;

  @media (min-width $content-width) {
    background: url('../img/bg/intro.jpg') center bottom;
    background-size: cover;
    -moz-background-size: cover;
    -webkit-background-size: cover;
    -o-background-size: cover;
    margin-top: 100px;
    padding-bottom: 200px;
  }

  &__banner {
    width: auto;
    margin: 0 auto 15px;
    padding: 0 6%;

    @media (min-width $content-width) {
      padding: 0;
      margin: 0 auto 20px;
    }
  }

  &__subtitle {
    display: block;
    text-align: center;
    color: white;
    set-font-size(13px);

    @media (min-width $content-width) {
      set-font-size(25px);
    }
  }
}

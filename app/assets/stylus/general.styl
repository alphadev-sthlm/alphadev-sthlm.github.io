*, *:before, *:after {
  box-sizing: border-box;
}
body {
  font-family: arial;
  font-size: 16px;
}
h1,h2,h3,h4 {
  font-family: 'Oswald', sans-serif;
}

img {
  display: block;
  width: 100%;
}

.main-color {
  color: $main-color;
}

.button {
  border: 0;
  background-color: $main-color;
  color: $white;
  text-transform: uppercase;
  border-radius: 4px;
  padding: 10px;
  font-size: 20px;
}
